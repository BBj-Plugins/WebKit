            #MenuItemTiles!.put(item!.getNodeId(),tile!)
            #buildChildren(id%,i+1)
            if i > 0 then
                tile!.setVisible(0)
            endif
            if item!.hasChildren() then
               tile!.setHeader()
            endif
            
        wend
        
            
    methodend
    
